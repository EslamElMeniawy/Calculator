<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ResultText">
        <item name="android:background">@color/darkGray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ResultTextSize</item>
    </style>

    <style name="CalculatorButton">
        <item name="android:textSize">@dimen/ButtonTextSize</item>
    </style>

    <style name="NumbersButton" parent="CalculatorButton">
        <item name="android:background">@color/lightGray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SignsButton" parent="CalculatorButton">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
